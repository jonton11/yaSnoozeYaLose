<div class="authform">

  <%= form_tag sessions_path do %>
  <h3>Sign In</h3>
    <div>
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: "form-control", placeholder: "johnsmith@gmail.com" %>
    </div>
    <br />
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <br />
    <div>
      <%= submit_tag "Sign In", class: "btn btn-primary" %>
    </div>
    <br />
    <a href="#">Forgot Password?</a>
  <% end %>
</div>
