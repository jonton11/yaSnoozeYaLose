<div class="authform">

  <%= form_tag sessions_path do %>
  <h3>Sign In</h3>
    <div>
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: "form-control", placeholder: "johnsmith@gmail.com" %>
    </div>
    <br />
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>
    <br />
    <div>
      <%= link_to "", sign_in_with_twitter_path, class: "fa fa-twitter" %>
      <%= link_to "", sign_in_with_facebook_path, class: "fa fa-facebook" %>
      <span class="float: right"><%= submit_tag "Sign In", class: "btn btn-primary" %></span>
    </div>
    <br />
    <!-- TODO: Forgot Password <a href="#">Forgot Password?</a> -->
  <% end %>
</div>
