<div class="container">
  <br />
  <h3> Pending Challenge Requests for <%= current_user.full_name %></h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th colspan="3">
        </th>
      </tr>
    </thead>
    <tbody>
      <% @request.each do |challenge| %>
      <tr>
        <% if current_user.challenge_actions.find_by_challenge_id(challenge).try(:vote) == false || nil  %>
        <td>
          <%= challenge.name %>
        </td>
        <td>
          <%= link_to 'Reject', vote_challenges_path(challenge), class: 'btn btn-default', style: "float: right" %>
          <%= link_to 'Accept', vote_challenges_path(challenge), class: 'btn btn-primary', style: "float: right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
