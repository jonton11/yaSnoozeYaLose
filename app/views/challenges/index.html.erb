<div class="container">
  <p id="notice"><%= notice %></p>
  <br />
  <h3>Your Challenges</h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Total Streak</th>
        <th>Name</th>
        <th>Description</th>
        <th>Start date</th>
        <th>Team</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @challenges.each do |challenge| %>
        <tr>
          <td><%= challenge.challenge_actions.find_by_user_id(current_user).total_streak %></td>
          <td><%= challenge.name %></td>
          <td><%= challenge.description %></td>
          <td><%= challenge.start_date %></td>
          <td><%= challenge.team.name %></td>
          <td><%= link_to 'Challenge Page', challenge %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
